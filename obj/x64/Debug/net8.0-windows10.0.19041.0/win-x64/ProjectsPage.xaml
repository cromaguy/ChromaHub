<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="ChromaHub.ProjectsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChromaHub"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <StackPanel Grid.Row="0" Margin="24,24,24,16">
            <TextBlock Text="Featured Projects" 
                       Style="{ThemeResource TitleLargeTextBlockStyle}"
                       FontWeight="SemiBold"/>
            <TextBlock Text="Showcasing some of my best work" 
                       Style="{ThemeResource BodyTextBlockStyle}"
                       Opacity="0.8"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Projects Grid -->
        <ScrollViewer Grid.Row="1" Padding="24,0,24,24">
            <ItemsRepeater x:ConnectionId='2'                                >
                <ItemsRepeater.Layout>
                    <UniformGridLayout MinItemWidth="320" 
                                      MinRowSpacing="16"
                                      MinColumnSpacing="16"/>
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate                               >
                        <Grid x:ConnectionId='4'>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="160"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Image x:ConnectionId='5'                            
                                   Stretch="UniformToFill"
                                   Grid.Row="0">
                                <Image.Transitions>
                                    <TransitionCollection>
                                        <EntranceThemeTransition IsStaggeringEnabled="True"/>
                                    </TransitionCollection>
                                </Image.Transitions>
                            </Image>

                            <Grid Grid.Row="1" 
                                  BorderThickness="1"
                                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                  Padding="16">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock x:ConnectionId='6'                       
                                           Style="{ThemeResource SubtitleTextBlockStyle}" 
                                           FontWeight="SemiBold"
                                           Grid.Row="0"/>

                                <ItemsRepeater x:ConnectionId='7' Grid.Row="1" 
                                                                                
                                             Margin="0,8,0,0">
                                    <ItemsRepeater.Layout>
                                        <StackLayout Orientation="Horizontal" Spacing="8"/>
                                    </ItemsRepeater.Layout>
                                    <ItemsRepeater.ItemTemplate>
                                        <DataTemplate                      >
                                            <Border x:ConnectionId='12' Background="{ThemeResource AccentFillColorDefaultBrush}" 
                                                    CornerRadius="4"
                                                    Padding="8,2">
                                                <TextBlock x:ConnectionId='13'                 
                                                           FontSize="12" 
                                                           Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsRepeater.ItemTemplate>
                                </ItemsRepeater>

                                <TextBlock x:ConnectionId='8'                             
                                           Style="{ThemeResource BodyTextBlockStyle}" 
                                           TextWrapping="Wrap"
                                           Grid.Row="2"
                                           Margin="0,12,0,0"
                                           Opacity="0.8"/>

                                <StackPanel Grid.Row="3" 
                                          Orientation="Horizontal" 
                                          Spacing="8"
                                          Margin="0,12,0,0">
                                    <Button x:ConnectionId='9' Content="View Live"
                                                                           
                                                                        
                                                                  />
                                    <Button x:ConnectionId='10' Content="Source Code"
                                            Style="{StaticResource SubtleButtonStyle}"
                                                                             
                                                                          
                                                                    />
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </ScrollViewer>
    </Grid>
</Page>

