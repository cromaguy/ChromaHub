<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ChromaHub.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChromaHub"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Page.Resources>
        <AcrylicBrush x:Key="CardAcrylicBrush"
                     TintColor="{ThemeResource SolidBackgroundFillColorBase}"
                     TintOpacity="0.6"
                     TintLuminosityOpacity="0.8" 
                     FallbackColor="{ThemeResource SolidBackgroundFillColorBase}"/>

        <Style x:Key="SettingsCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardAcrylicBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <Style x:Key="SettingsTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="SettingsSectionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Height="180" Background="Transparent">
            <!-- Background accent elements -->
            <Border x:ConnectionId='7' x:Name="AccentRect" 
                    Width="320" 
                    Height="320" 
                    CornerRadius="160"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,-80,-140">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{ThemeResource SystemAccentColor}" Offset="0.0" />
                        <GradientStop Color="{ThemeResource SystemAccentColorLight1}" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Opacity>0.15</Border.Opacity>
            </Border>

            <!-- Header pattern -->
            <Canvas>
                <Path x:ConnectionId='10' x:Name="PatternPath1" Stroke="{ThemeResource SystemAccentColor}" StrokeThickness="0.5" Opacity="0.2" 
                      Data="M50,30 C110,20 180,50 240,30" Canvas.Left="480" Canvas.Top="40" />
                <Path x:ConnectionId='11' x:Name="PatternPath2" Stroke="{ThemeResource SystemAccentColor}" StrokeThickness="0.5" Opacity="0.2" 
                      Data="M30,60 C100,40 160,80 230,60" Canvas.Left="500" Canvas.Top="70" />
                <Path x:ConnectionId='12' x:Name="PatternPath3" Stroke="{ThemeResource SystemAccentColorDark1}" StrokeThickness="0.5" Opacity="0.15" 
                      Data="M20,90 C90,70 170,100 250,80" Canvas.Left="520" Canvas.Top="100" />
            </Canvas>

            <!-- Header content -->
            <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Margin="30,0,30,35">
                <TextBlock x:ConnectionId='8' Text="Customize your experience"
                           Foreground="{ThemeResource SystemControlForegroundAccentBrush}"
                           FontSize="16"
                           Opacity="0.9"
                           FontWeight="SemiBold"
                           x:Name="HeaderSubtitle"/>
                <TextBlock x:ConnectionId='9' Text="Settings"
                           Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                           FontSize="36"
                           FontWeight="Bold"
                           x:Name="HeaderTitle"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,8,0,0">
            <StackPanel Padding="24,12,24,24" Spacing="20">

                <!-- Personalization Card -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <Expander HorizontalAlignment="Stretch" 
                              HorizontalContentAlignment="Stretch"
                              ExpandDirection="Down"
                              IsExpanded="True">
                        <Expander.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" Glyph="&#xE771;" 
                                          FontSize="20" 
                                          Margin="0,0,12,0"
                                          Foreground="{ThemeResource SystemAccentColor}"/>
                                <TextBlock Grid.Column="1" 
                                           Text="Personalization" 
                                           Style="{StaticResource SettingsTitleStyle}"
                                           VerticalAlignment="Center"
                                           Margin="0"/>
                            </Grid>
                        </Expander.Header>
                        <Expander.Content>
                            <StackPanel Spacing="24" Margin="0,12,0,0">
                                <!-- Theme Selection -->
                                <StackPanel>
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Theme" 
                                                   Style="{ThemeResource BodyStrongTextBlockStyle}"
                                                   VerticalAlignment="Center"/>
                                        <FontIcon Grid.Column="1" 
                                                  Glyph="&#xE706;"
                                                  Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    </Grid>

                                    <RadioButtons x:ConnectionId='6' x:Name="ThemeRadioButtons" 
                                                                                                     
                                                MaxColumns="3">
                                        <RadioButton Content="Light" Tag="Light"/>
                                        <RadioButton Content="Dark" Tag="Dark"/>
                                        <RadioButton Content="Use system" Tag="Default"/>
                                    </RadioButtons>
                                </StackPanel>

                                <!-- Backdrop Settings -->
                                <StackPanel>
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Window backdrop" 
                                                 Style="{ThemeResource BodyStrongTextBlockStyle}"
                                                 VerticalAlignment="Center"/>
                                        <FontIcon Grid.Column="1" 
                                                  Glyph="&#xE81E;"
                                                  Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    </Grid>

                                    <RadioButtons x:ConnectionId='5' x:Name="BackdropRadioButtons"
                                                                                                        
                                                MaxColumns="2">
                                        <RadioButton Content="Mica effect" Tag="Mica"/>
                                        <RadioButton Content="Solid color" Tag="Solid"/>
                                    </RadioButtons>
                                </StackPanel>
                            </StackPanel>
                        </Expander.Content>
                    </Expander>
                </Border>

                <!-- Animation Card -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <Expander HorizontalAlignment="Stretch" 
                              HorizontalContentAlignment="Stretch"
                              ExpandDirection="Down"
                              IsExpanded="True">
                        <Expander.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" Glyph="&#xE805;" 
                                          FontSize="20" 
                                          Margin="0,0,12,0"
                                          Foreground="{ThemeResource SystemAccentColor}"/>
                                <TextBlock Grid.Column="1" 
                                           Text="Animation" 
                                           Style="{StaticResource SettingsTitleStyle}"
                                           VerticalAlignment="Center"
                                           Margin="0"/>
                            </Grid>
                        </Expander.Header>
                        <Expander.Content>
                            <StackPanel Spacing="12" Margin="0,12,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Enable animations" 
                                                   Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="Toggle animations throughout the application"
                                                  Style="{ThemeResource CaptionTextBlockStyle}"
                                                  Opacity="0.7"
                                                  TextWrapping="Wrap"
                                                  Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <ToggleSwitch x:ConnectionId='4' Grid.Column="1" 
                                                  x:Name="EnableAnimationsToggle"
                                                                                          
                                                  OnContent=""
                                                  OffContent=""
                                                  IsOn="True"/>
                                </Grid>

                                <InfoBar x:ConnectionId='3' x:Name="AnimationInfoBar"
                                        IsOpen="False"
                                        Title="Changes applied"
                                        Message="Animation settings have been updated"
                                        Severity="Success"
                                        IsClosable="True"/>
                            </StackPanel>
                        </Expander.Content>
                    </Expander>
                </Border>

                <!-- About Card -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <Expander HorizontalAlignment="Stretch" 
                              HorizontalContentAlignment="Stretch"
                              ExpandDirection="Down"
                              IsExpanded="True">
                        <Expander.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" Glyph="&#xE946;" 
                                          FontSize="20" 
                                          Margin="0,0,12,0"
                                          Foreground="{ThemeResource SystemAccentColor}"/>
                                <TextBlock Grid.Column="1" 
                                           Text="About" 
                                           Style="{StaticResource SettingsTitleStyle}"
                                           VerticalAlignment="Center"
                                           Margin="0"/>
                            </Grid>
                        </Expander.Header>
                        <Expander.Content>
                            <StackPanel Spacing="8" Margin="0,12,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Chroma Hub" 
                                                   Style="{ThemeResource TitleTextBlockStyle}"/>
                                        <TextBlock Text="Version 1.3.0" 
                                                   Style="{ThemeResource CaptionTextBlockStyle}"
                                                   Opacity="0.7"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <Image Grid.Column="1" 
                                           Source="ms-appx:///Assets/AN.png" 
                                           Width="40" 
                                           Height="40"
                                           VerticalAlignment="Center"/>
                                </Grid>

                                <TextBlock Text="© 2025 Anjishnu Nandi. All rights reserved."
                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                           Opacity="0.7"
                                           Margin="0,16,0,0"/>
                            </StackPanel>
                        </Expander.Content>
                    </Expander>
                </Border>

                <!-- Reset Button with Card -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Reset settings" 
                                       Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                            <TextBlock Text="Reset all settings to their default values"
                                      Style="{ThemeResource CaptionTextBlockStyle}"
                                      Opacity="0.7"
                                      TextWrapping="Wrap"
                                      Margin="0,4,0,0"/>
                        </StackPanel>

                        <Button x:ConnectionId='2' Grid.Column="1"
                                Content="Reset"
                                                                 
                                Style="{ThemeResource AccentButtonStyle}"/>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>



