<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ChromaHub.ProjectsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChromaHub"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animations="using:Microsoft.UI.Xaml.Media.Animation"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid Padding="0,0,0,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with animation and modern design -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Decorative accent element -->
            <Rectangle x:Name="AccentRect" 
                       Grid.Row="0" 
                       Height="4" 
                       HorizontalAlignment="Left"
                       Width="64" 
                       Margin="24,8,0,16"
                       Fill="{ThemeResource AccentFillColorDefaultBrush}">
                <Rectangle.OpacityTransition>
                    <ScalarTransition />
                </Rectangle.OpacityTransition>
            </Rectangle>

            <!-- Main Header -->
            <StackPanel Grid.Row="1" Margin="24,0,24,0">
                <TextBlock x:Name="HeaderTitle" 
                          Text="Featured Projects" 
                          Style="{ThemeResource TitleLargeTextBlockStyle}"
                          FontWeight="SemiBold">
                    <TextBlock.OpacityTransition>
                        <ScalarTransition />
                    </TextBlock.OpacityTransition>
                </TextBlock>

                <TextBlock x:Name="HeaderSubtitle" 
                          Text="Showcasing my latest work and experiments" 
                          Style="{ThemeResource BodyLargeTextBlockStyle}"
                          Opacity="0.8"
                          Margin="0,8,0,0">
                    <TextBlock.OpacityTransition>
                        <ScalarTransition />
                    </TextBlock.OpacityTransition>
                </TextBlock>
            </StackPanel>
        </Grid>

        <!-- Content Area -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Filter Controls -->
            <Grid Grid.Row="0" Margin="24,0,24,16">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <ComboBox x:Name="FilterComboBox" 
                              PlaceholderText="Filter by technology" 
                              Width="200"
                              SelectionChanged="FilterComboBox_SelectionChanged">
                        <ComboBoxItem Content="All Projects" Tag="All"/>
                        <ComboBoxItem Content="JavaScript" Tag="JavaScript"/>
                        <ComboBoxItem Content="HTML/CSS" Tag="HTML"/>
                        <ComboBoxItem Content="API Projects" Tag="API"/>
                    </ComboBox>
                    <AutoSuggestBox x:Name="SearchBox" 
                                   PlaceholderText="Search projects..." 
                                   Width="280"
                                   QueryIcon="Find"
                                   TextChanged="SearchBox_TextChanged"/>
                </StackPanel>
            </Grid>

            <!-- Projects Collection -->
            <ScrollViewer Grid.Row="1" Margin="0,0,0,0" Padding="24,0,24,24">
                <ItemsRepeater x:Name="ProjectsRepeater" ItemsSource="{x:Bind FilteredProjects}">
                    <ItemsRepeater.Layout>
                        <UniformGridLayout MinItemWidth="380" 
                                         MinItemHeight="360"
                                         MinRowSpacing="24"
                                         MinColumnSpacing="24"/>
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="local:ProjectItem">
                            <Grid CornerRadius="8" 
                                  BorderThickness="1"
                                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="180"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Shadow Effect -->
                                <Grid.Shadow>
                                    <ThemeShadow />
                                </Grid.Shadow>

                                <!-- Project Image -->
                                <Grid Grid.Row="0">
                                    <Image Source="{x:Bind ImageUrl}" 
                                         Stretch="UniformToFill">
                                        <Image.Transitions>
                                            <TransitionCollection>
                                                <EntranceThemeTransition IsStaggeringEnabled="True"/>
                                            </TransitionCollection>
                                        </Image.Transitions>
                                    </Image>

                                    <!-- Overlay for better readability -->
                                    <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Opacity="0.1"/>

                                    <!-- Technology Badges -->
                                    <ItemsRepeater ItemsSource="{x:Bind Technologies}"
                                                  HorizontalAlignment="Right"
                                                  VerticalAlignment="Top"
                                                  Margin="0,12,12,0">
                                        <ItemsRepeater.Layout>
                                            <StackLayout Orientation="Horizontal" Spacing="8"/>
                                        </ItemsRepeater.Layout>
                                        <ItemsRepeater.ItemTemplate>
                                            <DataTemplate x:DataType="x:String">
                                                <Border Background="{ThemeResource AccentFillColorDefaultBrush}" 
                                                      CornerRadius="4"
                                                      Padding="8,4">
                                                    <TextBlock Text="{x:Bind}" 
                                                             FontSize="11" 
                                                             FontWeight="SemiBold"
                                                             Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsRepeater.ItemTemplate>
                                    </ItemsRepeater>
                                </Grid>

                                <!-- Project Details -->
                                <Grid Grid.Row="1" Padding="20,16">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Title -->
                                    <TextBlock Grid.Row="0" 
                                             Text="{x:Bind Title}" 
                                             Style="{ThemeResource SubtitleTextBlockStyle}" 
                                             FontWeight="SemiBold"/>

                                    <!-- Description -->
                                    <TextBlock Grid.Row="1" 
                                             Text="{x:Bind Description}" 
                                             Style="{ThemeResource BodyTextBlockStyle}" 
                                             TextWrapping="Wrap"
                                             Margin="0,8,0,0"
                                             Opacity="0.8"/>

                                    <!-- Actions -->
                                    <StackPanel Grid.Row="2" 
                                              Orientation="Horizontal" 
                                              Spacing="8"
                                              Margin="0,12,0,0"
                                              HorizontalAlignment="Right">
                                        <Button Content="Source"
                                                Style="{StaticResource AccentButtonStyle}"
                                                IsEnabled="{x:Bind HasGithubUrl}"
                                                Click="ViewSourceButton_Click"
                                                Tag="{x:Bind GithubUrl}">
                                            <Button.ContentTransitions>
                                                <TransitionCollection>
                                                    <EntranceThemeTransition />
                                                </TransitionCollection>
                                            </Button.ContentTransitions>
                                        </Button>
                                        <Button Content="View Live"
                                                IsEnabled="{x:Bind HasLiveUrl}"
                                                Click="ViewLiveButton_Click"
                                                Tag="{x:Bind LiveUrl}">
                                            <Button.ContentTransitions>
                                                <TransitionCollection>
                                                    <EntranceThemeTransition />
                                                </TransitionCollection>
                                            </Button.ContentTransitions>
                                        </Button>
                                    </StackPanel>
                                </Grid>

                                <!-- Highlight border effect on hover -->
                                <Border x:Name="HighlightBorder" 
                                       CornerRadius="8"
                                       BorderThickness="2"
                                       BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                                       Opacity="0">
                                    <Border.OpacityTransition>
                                        <ScalarTransition />
                                    </Border.OpacityTransition>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </ScrollViewer>

            <!-- Empty state message -->
            <Grid x:Name="EmptyStateGrid" 
                 Grid.Row="1" 
                 Visibility="Collapsed"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 Margin="0,40,0,0">
                <StackPanel HorizontalAlignment="Center" Spacing="16">
                    <FontIcon Glyph="&#xE9CE;" 
                             FontSize="48" 
                             Foreground="{ThemeResource TextSecondaryForegroundThemeBrush}"/>
                    <TextBlock Text="No projects found" 
                              Style="{ThemeResource SubtitleTextBlockStyle}"
                              TextAlignment="Center"/>
                    <TextBlock Text="Try changing your filter or search criteria" 
                              Style="{ThemeResource BodyTextBlockStyle}"
                              TextAlignment="Center"
                              Opacity="0.7"/>
                    <Button Content="Show all projects"
                           Click="ShowAllProjects_Click"
                           Margin="0,12,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>