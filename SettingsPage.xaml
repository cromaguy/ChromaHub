<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ChromaHub.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChromaHub"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Padding="24" Spacing="24">
            <!-- Settings Header -->
            <TextBlock Text="Settings" 
                      Style="{ThemeResource TitleLargeTextBlockStyle}" 
                      FontWeight="SemiBold"/>

            <!-- Theme Settings -->
            <Expander Header="Appearance" IsExpanded="True">
                <StackPanel Spacing="16" Margin="0,8,0,0">
                    <!-- Theme Selection -->
                    <StackPanel>
                        <TextBlock Text="Theme" 
                                  Style="{ThemeResource SubtitleTextBlockStyle}"
                                  Margin="0,0,0,8"/>

                        <RadioButtons x:Name="ThemeRadioButtons" 
                                     SelectionChanged="ThemeRadioButtons_SelectionChanged">
                            <RadioButton Content="Light" Tag="Light"/>
                            <RadioButton Content="Dark" Tag="Dark"/>
                            <RadioButton Content="Use system setting" Tag="Default"/>
                        </RadioButtons>
                    </StackPanel>

                    <!-- Backdrop Settings -->
                    <StackPanel>
                        <TextBlock Text="Window backdrop" 
                                  Style="{ThemeResource SubtitleTextBlockStyle}"
                                  Margin="0,0,0,8"/>

                        <RadioButtons x:Name="BackdropRadioButtons"
                                     SelectionChanged="BackdropRadioButtons_SelectionChanged">
                            <RadioButton Content="Mica effect" Tag="Mica"/>
                            <RadioButton Content="Solid color" Tag="Solid"/>
                        </RadioButtons>
                    </StackPanel>
                </StackPanel>
            </Expander>

            <!-- Animation Settings -->
            <Expander Header="Animations">
                <StackPanel Spacing="16" Margin="0,8,0,0">
                    <ToggleSwitch x:Name="EnableAnimationsToggle"
                                 Header="Enable animations"
                                 IsOn="True"
                                 Toggled="EnableAnimationsToggle_Toggled"/>
                </StackPanel>
            </Expander>

            <!-- About Section -->
            <Expander Header="About" IsExpanded="True">
                <StackPanel Spacing="8" Margin="0,8,0,0">
                    <TextBlock Text="Chroma Hub" 
                              Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                    <TextBlock Text="Version 1.0.0" 
                              Style="{ThemeResource CaptionTextBlockStyle}"
                              Opacity="0.7"/>
                    <TextBlock Text="Â© 2025 Anjishnu Nandi. All rights reserved."
                              Style="{ThemeResource CaptionTextBlockStyle}"
                              Opacity="0.7"
                              Margin="0,8,0,0"/>
                </StackPanel>
            </Expander>

            <!-- Reset Button -->
            <Button Content="Reset all settings"
                   Click="ResetSettingsButton_Click"
                   Margin="0,16,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Page>