<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ChromaHub.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChromaHub"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <Grid Grid.Row="0" Margin="24,12,24,0">
            <TextBlock Text="Settings" 
                     Style="{ThemeResource TitleLargeTextBlockStyle}" 
                     FontWeight="SemiBold"/>
        </Grid>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,8,0,0">
            <StackPanel Padding="24,12,24,24" Spacing="16">
                <!-- Divider -->
                <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,0,0,8"/>

                <!-- Theme Settings -->
                <StackPanel>
                    <TextBlock Text="Personalization" 
                             Style="{ThemeResource SubtitleTextBlockStyle}"
                             FontWeight="SemiBold"
                             Margin="0,0,0,12"/>

                    <StackPanel Spacing="16">
                        <!-- Theme Selection -->
                        <StackPanel>
                            <TextBlock Text="Theme" 
                                     Style="{ThemeResource BodyStrongTextBlockStyle}"
                                     Margin="0,0,0,8"/>

                            <RadioButtons x:Name="ThemeRadioButtons" 
                                        SelectionChanged="ThemeRadioButtons_SelectionChanged"
                                        MaxColumns="3">
                                <RadioButton Content="Light" Tag="Light"/>
                                <RadioButton Content="Dark" Tag="Dark"/>
                                <RadioButton Content="Use system setting" Tag="Default"/>
                            </RadioButtons>
                        </StackPanel>

                        <!-- Backdrop Settings -->
                        <StackPanel>
                            <TextBlock Text="Window backdrop" 
                                     Style="{ThemeResource BodyStrongTextBlockStyle}"
                                     Margin="0,0,0,8"/>

                            <RadioButtons x:Name="BackdropRadioButtons"
                                        SelectionChanged="BackdropRadioButtons_SelectionChanged"
                                        MaxColumns="2">
                                <RadioButton Content="Mica effect" Tag="Mica"/>
                                <RadioButton Content="Solid color" Tag="Solid"/>
                            </RadioButtons>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Divider -->
                <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,8,0,8"/>

                <!-- Animation Settings -->
                <StackPanel>
                    <TextBlock Text="Animation" 
                             Style="{ThemeResource SubtitleTextBlockStyle}"
                             FontWeight="SemiBold"
                             Margin="0,0,0,12"/>

                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal">
                            <ToggleSwitch x:Name="EnableAnimationsToggle"
                                        Header="Enable animations"
                                        IsOn="True"
                                        Toggled="EnableAnimationsToggle_Toggled"/>

                            <InfoBar x:Name="AnimationInfoBar"
                                    IsOpen="False"
                                    Title="Changes applied"
                                    Message="Animation settings have been updated"
                                    Severity="Success"
                                    IsClosable="True"
                                    Margin="12,0,0,0"/>
                        </StackPanel>

                        <TextBlock Text="Toggle animations throughout the application. Changes will apply immediately."
                                 Style="{ThemeResource CaptionTextBlockStyle}"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>

                <!-- Divider -->
                <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,8,0,8"/>

                <!-- About Section -->
                <StackPanel>
                    <TextBlock Text="About" 
                             Style="{ThemeResource SubtitleTextBlockStyle}"
                             FontWeight="SemiBold"
                             Margin="0,0,0,12"/>

                    <StackPanel Spacing="8">
                        <TextBlock Text="Chroma Hub" 
                                 Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                        <TextBlock Text="Version 1.3.0" 
                                 Style="{ThemeResource CaptionTextBlockStyle}"
                                 Opacity="0.7"/>
                        <TextBlock Text="Â© 2025 Anjishnu Nandi. All rights reserved."
                                 Style="{ThemeResource CaptionTextBlockStyle}"
                                 Opacity="0.7"
                                 Margin="0,8,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Reset Button -->
                <Button Content="Reset all settings"
                      Click="ResetSettingsButton_Click"
                      Margin="0,16,0,0"
                      Style="{ThemeResource AccentButtonStyle}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>